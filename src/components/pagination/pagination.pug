mixin pagination(options)
    - 
        const {
            title,
            curPageNumber,
            pagesCount,
            itemsCount
        } = options;

    div(class=["pagination"] data-pages-count=pagesCount data-items-count=itemsCount data-cur-page=curPageNumber)
        - if(title)
            p(class=["pagination__title"])= title
        div(class=["pagination__list"])
            - if(curPageNumber !== 1) {
                a(class=["pagination__left-arrow", "js-pagination__link"] 
                    href="https://errorpage.com" target="_blank" rel="noopener noreferrer"
                    data-page-number="leftArrow")
                    span(class=["pagination__left-arrow-text"]) arrow_forward
                a(class=["pagination__link", "js-pagination__link"]
                    href="https://errorpage.com" target="_blank" rel="noopener noreferrer"
                    data-page-number="1")
                    span(class=["pagination__link-text"])= 1
            - }
            - if(curPageNumber - 3 > 1)
                a(class=["pagination__link"]
                    href="https://errorpage.com" target="_blank" rel="noopener noreferrer"
                    data-page-number="...")
                    span(class=["pagination__link-text"])= "..." 
            - if(curPageNumber - 2 > 1)
                a(class=["pagination__link", "js-pagination__link"]
                    href="https://errorpage.com" target="_blank" rel="noopener noreferrer"
                    data-page-number=`${curPageNumber - 2}`)
                    span(class=["pagination__link-text"])= curPageNumber - 2
            - if(curPageNumber - 1 > 1)
                a(class=["pagination__link", "js-pagination__link"]
                    href="https://errorpage.com" target="_blank" rel="noopener noreferrer" 
                    data-page-number=`${curPageNumber - 1}`)
                    span(class=["pagination__link-text"])= curPageNumber - 1
            a(class=["pagination__link", "pagination__link_target", "js-pagination__link"]
                href="https://errorpage.com" target="_blank" rel="noopener noreferrer"
                data-page-number=`${curPageNumber}`)
                span(class=["pagination__link-text"])= curPageNumber
            - if(curPageNumber + 1 < pagesCount)
                a(class=["pagination__link", "js-pagination__link"]
                    href="https://errorpage.com" target="_blank" rel="noopener noreferrer"
                    data-page-number=`${curPageNumber + 1}`)
                    span(class=["pagination__link-text"])= curPageNumber + 1
            - if(curPageNumber + 2 < pagesCount)
                a(class=["pagination__link", "js-pagination__link"]
                    href="https://errorpage.com" target="_blank" rel="noopener noreferrer" 
                    data-page-number=`${curPageNumber + 2}`)
                    span(class=["pagination__link-text"])= curPageNumber + 2
            - if(curPageNumber + 3 < pagesCount)
                a(class=["pagination__link"] data-page-number="..."
                    href="https://errorpage.com" target="_blank" rel="noopener noreferrer") 
                    span(class=["pagination__link-text"])= "..." 
            - if(curPageNumber !== pagesCount) {
                a(class=["pagination__link", "js-pagination__link"]
                    href="https://errorpage.com" target="_blank" rel="noopener noreferrer" 
                    data-page-number=`${pagesCount}`)
                    span(class=["pagination__link-text"])= pagesCount    
                a(class=["pagination__right-arrow", "js-pagination__link"]
                    href="https://errorpage.com" target="_blank" rel="noopener noreferrer"
                    data-page-number="rightArrow")
                    span(class=["pagination__right-arrow-text"]) arrow_forward
            - }
        p(class=["pagination__bottom-text"])
